{
  "namePrefix": "petstore-",
  "webhook": {
    "name": "github-issue"
  },

  "testTargets": {
    "services": [
      {
        "Container": "acrmgreisen.azurecr.io/petstore:demo",
        "Ports": [ 8080 ],
        "ExpectedDurationUntilReady": "00:00:30",
        "Shell": "/bin/sh",
        "OutputFolder": "petstore"
      }
    ]
  },
  "testTasks": {
    "targetConfiguration": {
      "apiSpecifications": [
        "http://localhost:8080/api/swagger.json"
      ]
    },
    "tasks": [
      {
        "toolName": "RESTler",
        "outputFolder": "restler-logs",
        "toolConfiguration": {
          "tasks": [
            { "task": "Compile" },
            {
              "task": "Fuzz",
              "runConfiguration": {
                "Duration": "00:07:00",
                "useSSL": false
              }
            }
          ]
        }
      },
      {
        "toolName": "ZAP",
        "outputFolder" :  "zap-logs"
      }
    ]
  }
}
